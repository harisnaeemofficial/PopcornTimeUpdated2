<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MovieFlix" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/v3_background</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorAccent">@color/v3_accent</item>
        <item name="colorPrimary">#000000</item>

        <item name="shareIconColor">@color/v3_accent</item>

        //if you don't set this the background will be black when you slide.
        <item name="android:windowIsTranslucent">false</item>
        //set the right in/out animation of Activity,you can change this to yours
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="RobotoButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="Theme.MovieFlix.NavigationView">
        <item name="android:listDivider">@color/v3_navigation_list_divider</item>
    </style>

    <style name="Theme.MovieFlix.Classic" parent="Theme.MovieFlix">
        <item name="colorAccent">#ffffff</item>
        <!--<item name="searchViewStyle">@style/Widget.MovieFlix.Classic.SearchView</item>-->
        <!-- base -->
        <item name="baseLabelColor">#ffffff</item>
        <!-- toolbar -->
        <item name="toolbar">@style/Widget.MovieFlix.Classic.Toolbar</item>
        <item name="toolbarTitle">@style/Widget.MovieFlix.Classic.Toolbar.Title</item>
        <item name="toolbarPopup">@style/Widget.MovieFlix.Classic.Toolbar.Popup</item>
        <!-- main -->
        <item name="mainBackground">#313131</item>
        <!-- video -->
        <item name="videoBackground">@color/classic_video_background</item>
        <item name="videoPosterShadowLand">@drawable/classic_video_poster_shadow_land</item>
        <item name="videoPosterShadowPort">@drawable/classic_video_poster_shadow_port</item>
        <!-- prepare watch -->
        <item name="prepareWatchProgressBarStyle">@style/PrepareWatchProgressBarStyle</item>
        <item name="prepareWatchStatusTextStyle">@style/PrepareWatchStatusText</item>
    </style>

    <style name="Theme.MovieFlix.Player.Classic" parent="Theme.Player">
        <item name="shareIconColor">@color/v3_accent</item>
    </style>

    <!-- Main -->

    <style name="Theme.MovieFlix.Main" parent="Theme.MovieFlix">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="searchViewStyle">@style/Widget.MovieFlix.SearchView</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Details -->

    <style name="Theme.MovieFlix.Details" parent="Theme.MovieFlix">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="videoBackground">@color/classic_video_background</item>
        <item name="videoPosterShadowLand">@drawable/classic_video_poster_shadow_land</item>
        <item name="videoPosterShadowPort">@drawable/classic_video_poster_shadow_port</item>
        <item name="prepareWatchProgressBarStyle">@style/PrepareWatchProgressBarStyle</item>
        <item name="prepareWatchStatusTextStyle">@style/PrepareWatchStatusText</item>
    </style>

    <!-- Downloads -->

    <style name="Theme.MovieFlix.Downloads" parent="Theme.MovieFlix">

    </style>

    <style name="Theme.MovieFlix.Downloads.ResumeButton" parent="Theme.MovieFlix">
        <item name="colorControlNormal">@color/v3_accent</item>
    </style>

    <!-- Vpn -->

    <style name="Theme.MovieFlix.Vpn" parent="Theme.MovieFlix">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.MovieFlix</item>
    </style>

    <!-- Settings -->

    <style name="Theme.MovieFlix.Settings" parent="Theme.MovieFlix">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.MovieFlix</item>
    </style>

    <!-- Preference -->

    <style name="PreferenceThemeOverlay.MovieFlix" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.MovieFlix</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.MovieFlix</item>
    </style>

    <style name="PreferenceFragment.MovieFlix" parent="PreferenceFragment.Material">
        <item name="android:divider">@null</item>
    </style>

</resources>